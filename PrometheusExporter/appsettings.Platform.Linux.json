{
  "Exporter": {
    "EndPoint": "http://+:9228/",

    "Enable": [
      "Linux",
      "DiskInfo",
      "Raspberry",
      "Ping",
      "SensorOmron",
      "WFWattch2",
      "BTWattch2",
      "SwitchBot",
      "Ble"
    ],

    "Instrumentation": {
      "Linux": {
      },

      "Raspberry": {
      },

      "Ping": {
        "Target": [
          {
            "Address": "8.8.8.8",
            "Name": "Google DNS"
          }
        ]
      },

      "SensorOmron": {
        "Sensor": [
          {
            "Port": "COM10",
            "Name": "Enviroment"
          }
        ]
      },

      "WFWattch2": {
        "Device": [
          {
            "Address": "192.168.100.101",
            "Name": "PC"
          },
          {
            "Address": "192.168.100.102",
            "Name": "Server"
          }
        ]
      },

      "BTWattch2": {
        "Device": [
          {
            "Address": "00:00:00:00:00:00",
            "Name": "RasPi"
          }
        ]
      },

      "SwitchBot": {
        "Device": [
          {
            "Type": "Meter",
            "Address": "00:00:00:00:00:01",
            "Name": "My Room"
          },
          {
            "Type": "Meter",
            "Address": "00:00:00:00:00:02",
            "Name": "Server Room"
          },
          {
            "Type": "Meter",
            "Address": "00:00:00:00:00:03",
            "Name": "Refrigerator"
          },
          {
            "Type": "PlugMini",
            "Address": "00:00:00:00:00:11",
            "Name": "Note PC"
          },
          {
            "Type": "PlugMini",
            "Address": "00:00:00:00:00:12",
            "Name": "Refrigerator"
          }
        ]
      },

      "Ble": {
        "KnownOnly": false
      }
    }
  },

  "Serilog": {
    "Using": [
      "Serilog.Enrichers.Environment",
      "Serilog.Sinks.File"
    ],
    "Enrich": [ "FromLogContext", "WithThreadId", "WithMachineName" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "log/exporter_.log",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:HH:mm:ss.fff} {Level:u4} {MachineName} [{ThreadId}] - {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  }
}

{
  "Exporter": {
    "EndPoint": "http://+:9228/",

    "EnableApplication": true,
    "EnableBle": false,
    "EnableDiskInfo": true,
    "EnableHardwareMonitor": true,
    "EnableHyperV": true,
    "EnablePerformanceCounter": true,
    "EnablePing": false,
    "EnableSensorOmron": false,
    "EnableSwitchBot": false,
    "EnableWFWattch2": false,
    "EnableWifi": false,

    "Ble": {
      "KnownOnly": false
    },

    "DiskInfo": {
    },

    "HardwareMonitor": {
      "IsBatteryEnabled": true,
      "IsControllerEnabled": true,
      "IsCpuEnabled": true,
      "IsGpuEnabled": true,
      "IsMemoryEnabled": true,
      "IsMotherboardEnabled": true,
      "IsNetworkEnabled": true,
      "IsStorageEnabled": true
    },

    "HyperV": {
    },

    "PerformanceCounter": {
      "Counter": [
        {
          "Name": "system_disk_free",
          "Category": "LogicalDisk",
          "Counter": "% Free Space"
        },
        // Load
        {
          "Name": "system_processor_queue",
          "Category": "System",
          "Counter": "Processor Queue Length"
        },
        {
          "Name": "system_processor_interrupt",
          "Category": "Processor",
          "Counter": "% Interrupt Time"
        },
        {
          "Name": "system_memory_page",
          "Category": "Memory",
          "Counter": "Pages/sec"
        },
        {
          "Name": "system_memory_commit",
          "Category": "Memory",
          "Counter": "% Committed Bytes In Use"
        },
        {
          "Name": "system_disk_idle",
          "Category": "PhysicalDisk",
          "Counter": "% Idle Time"
        },
        {
          "Name": "system_disk_iops",
          "Category": "PhysicalDisk",
          "Counter": "Disk Transfers/sec"
        },
        {
          "Name": "system_disk_queue",
          "Category": "PhysicalDisk",
          "Counter": "Current Disk Queue Length"
        },
        // Network
        {
          "Name": "system_tcp_connections_ip4",
          "Category": "TCPv4",
          "Counter": "Connections Established"
        },
        {
          "Name": "system_tcp_connections_ip6",
          "Category": "TCPv6",
          "Counter": "Connections Established"
        },
        // System
        {
          "Name": "system_uptime",
          "Category": "System",
          "Counter": "System Up Time"
        },
        {
          "Name": "system_process",
          "Category": "System",
          "Counter": "Processes"
        },
        {
          "Name": "system_thread",
          "Category": "Process",
          "Counter": "Thread Count",
          "Instance": "_Total"
        },
        {
          "Name": "system_handle",
          "Category": "Process",
          "Counter": "Handle Count",
          "Instance": "_Total"
        },
        {
          "Name": "system_system_call",
          "Category": "System",
          "Counter": "System Calls/sec"
        },
        {
          "Name": "system_context_switch",
          "Category": "System",
          "Counter": "Context Switches/sec"
        },
        {
          "Name": "system_exception_dispatch",
          "Category": "System",
          "Counter": "Exception Dispatches/sec"
        }
      ]
    },

    "Ping": {
      "Target": [
        {
          "Address": "8.8.8.8",
          "Name": "Google DNS"
        }
      ]
    },

    "SensorOmron": {
      "Sensor": [
        {
          "Port": "COM10",
          "Name": "Enviroment"
        }
      ]
    },

    "SwitchBot": {
      "Device": [
        {
          "Type": "Meter",
          "Address": "00:00:00:00:00:01",
          "Name": "My Room"
        },
        {
          "Type": "Meter",
          "Address": "00:00:00:00:00:02",
          "Name": "Server Room"
        },
        {
          "Type": "Meter",
          "Address": "00:00:00:00:00:03",
          "Name": "Refrigerator"
        },
        {
          "Type": "PlugMini",
          "Address": "00:00:00:00:00:11",
          "Name": "Note PC"
        },
        {
          "Type": "PlugMini",
          "Address": "00:00:00:00:00:12",
          "Name": "Refrigerator"
        }
      ]
    },

    "WFWattch2": {
      "Device": [
        {
          "Address": "192.168.100.101",
          "Name": "PC"
        },
        {
          "Address": "192.168.100.102",
          "Name": "Server"
        }
      ]
    },

    "Wifi": {
      "SignalThreshold": -75,
      "KnownOnly": false
    }
  },

  "Serilog": {
    "Using": [
      "Serilog.Enrichers.Environment",
      "Serilog.Sinks.File"
    ],
    "Enrich": [ "FromLogContext", "WithThreadId", "WithMachineName" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "log/service_.log",
          "rollingInterval": "Day",
          "outputTemplate": "{Timestamp:HH:mm:ss.fff} {Level:u4} {MachineName} [{ThreadId}] - {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  }
}
